.row
  #plus_signup.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4.panel.panel-default.form-box
    %h2
      Sign Up
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: 'new_user', class: '' }) do |f|
      = devise_error_messages!

      %fieldset
        .form-group
          = f.text_field :email, required: true, autofocus: true, placeholder: :email, class: 'form-control'
        .form-group
          = f.password_field :password, required: true, placeholder: :password, class: 'form-control'
        .form-group
          = f.password_field :password_confirmation, required: true, placeholder: :password_confirmation, class: 'form-control'
        .form-group
          %button.btn.btn-primary.btn-block{ type: 'submit' }
            Sign Up
        .form-group.no-margin
          = link_to t('devise.sessions.new.sign_in'), new_user_session_path, { class: 'btn-log' }
