.row
  .col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4.panel.panel-default.form-box
    %h2
      Log In
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: '' }) do |f|
      %fieldset
        .form-group
          = f.text_field :email, required: false, autofocus: true, placeholder: 'Email', class: 'form-control'
        .form-group.input-group
          = f.password_field :password, required: false, placeholder: 'Password', class: 'form-control'
          .input-group-btn
            %button#btn_sign_in.btn.btn-default{ type: 'submit' }
              %span.glyphicon.glyphicon-arrow-right
        .form-group
          .checkbox
            = f.label :remember_me, '', class: 'control-label' do
              = f.check_box :remember_me, as: :boolean if devise_mapping.rememberable?
              = t('devise.sessions.new.remember_me')
        .form-group.no-margin
          = link_to "Forgot Password", new_password_path(resource_name), { class: 'btn-log' }
          = link_to "Sign Up", new_registration_path(resource_name), { class: 'btn-log pull-right' }
          %span.clearfix
