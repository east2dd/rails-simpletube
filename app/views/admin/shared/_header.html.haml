.navbar.navbar-inverse
  .navbar-header
    = link_to "WeTube", "/", class: 'navbar-brand'
  .collapse.navbar-collapse
    %ul.nav.navbar-nav
      %li{class: "#{'active' if controller_name == 'videos'}"}
        = link_to "Videos", admin_videos_path
      %li{class: "#{'active' if controller_name == 'photos'}"}
        = link_to "Photos", admin_photos_path
      %li{class: "#{'active' if controller_name == 'categories'}"}
        = link_to "Categories", admin_categories_path
    %ul.nav.navbar-nav.navbar-right
      %li
        = link_to "New Video", new_admin_video_path
      %li
        = link_to "New Photo", new_admin_photo_path

      - if user_signed_in?
        %li
          = link_to edit_user_registration_path do
            #{current_user.full_name}
        %li
          = link_to 'Logout', destroy_user_session_path, method: :delete
      %li
        = link_to "Back to Home", videos_path